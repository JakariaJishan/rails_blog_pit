
<%= form_for @post, method: :patch do |form| %>
  <div role="alert" class="">
    <div class="relative py-8 px-5 md:px-10 bg-[#D6CC99] shadow-md rounded border border-gray-400">
      <h1 class="text-center text-gray-800 font-lg font-bold tracking-normal leading-tight mb-4">Edit New Post</h1>

      <%= form.text_field :title, class: 'mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-indigo-700 font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', placeholder: 'Post Title here...' %>

      <%= form.text_area :content,  class: 'mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-indigo-700 font-normal w-full h-50 flex items-center pl-3 text-sm border-gray-300 rounded border', placeholder: 'Enter post content here...' %>

      <%= form.file_field :post_image %>
      <div class="flex items-center justify-start w-full">
        <%= form.submit "Add Post", class: 'focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-[#445D48] rounded text-white px-8 py-2 text-sm cursor-pointer' %>
        <%= link_to "Cancel", post_path(@post), class:"focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-red-400 ml-3 bg-red-600 transition duration-150 text-white ease-in-out hover:border-red-400 hover:bg-red-500 border rounded px-8 py-2 text-sm" %>
      </div>
    </div>
  </div>
<% end %>