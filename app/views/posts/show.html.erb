<div class="bg-[#FDE5D4] my-5 p-3 text-left capitalize">
  <h2 class="text-5xl text-[#001524]  font-semibold ">
    <%= @post.title%>
  </h2>
  <p class="text-sm text-[#445D48] mt-2">
    <%= @post.content %>
  </p>
  <p class="text-gray-600">By:
    <%= @post.user.username %></p>
</div>

<div class="flex justify-between items-center">
<% if can? :edit, @post %>
<%= link_to "Edit post",  edit_post_path(@post) , class:"underline" %>
<% end %>

  <% if can? :destroy, @post %>
    <%= button_to "delete post", post_path(@post), method: :delete, data:{confirm:'are you sure?'} , class:"underline"%>
  <% end %>
</div>

<div class="my-10">
<% @comments.each do |comment| %>
    <p class="bg-[#D6CC99] text-black p-5 text-left">
      <%= comment.body %>
    </p>
    <div class="flex justify-between items-center my-5">
      <% if can? :edit, comment %>
            <%= link_to "Edit comments", edit_post_comment_path(@post, comment), class:"underline" %>
      <% end %>

      <% if can? :destroy, comment %>
      <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, data:{confirm:"Are you sure?"}, class:"underline text-red-400"%>
      <% end %>
    </div>
  <% comment.replies.each do |reply| %>
      <i>
        reply:  <%= reply.body %> <br/>
      </i>
  <% end %>

    <%= link_to "add reply", "/posts/#{@post.id}/comments/#{comment.id}/new" %>
    <br/>

<% end %>

<%= link_to "Add comment",  "/posts/#{@post.id}/comments/nil/new" , class: '  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-[#445D48] rounded text-white px-8 py-2 text-sm cursor-pointer'%>
</div>