<div class="bg-white rounded-lg">
  <%= image_tag @post.post_image, class:"rounded-t-lg" %>
  <div class="flex justify-between items-start">
    <div class="my-3 p-3">
      <h2 class="text-3xl text-[#001524] font-bold capitalize my-2 hover:text-indigo-700 ">
        <%= @post.title%>
      </h2>
      <p class="text-xl text-[#445D48] my-2">
        <%= @post.content %>
      </p>
      <p class="text-sm text-[#445D48]"><%= time_ago(@post.created_at)  %></p>
    </div>

    <div class="relative">
      <% if can? :manage, @post %>
    <button id="post-dot" class="p-4 "><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 -z-10">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM12.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM18.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
      </svg>
      </button>
    <div class="hidden absolute top-10 right-5 shadow-lg p-5 bg-white" id="post-popup">
          <% if can? :edit, @post %>
            <%= link_to "Edit", edit_post_path(@post) , class:"my-2 text-gray-500 border border-gray-500 px-3 py-px hover:bg-gray-500 hover:text-white rounded-md block"%>
          <% end %>

          <% if can? :destroy, @post %>
            <%= button_to "Delete", post_path(@post), method: :delete, data:{confirm:'are you sure?'} , class:"my-2 text-red-500 border border-red-500 px-3 py-px hover:bg-red-500 hover:text-white rounded-md" %>
          <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="my-10 ">
    <% @comments.each do |comment| %>
    <div class=" border-b bg-white p-5 ">
      <div class=" flex justify-between items-start p-3 ">
        <div class="flex items-center gap-3">
          <div>
            <%= image_tag comment.user.avatar  , class:"h-10 w-10 rounded-full object-cover"%>
          </div>
          <div>
            <b><%= comment.user.username %> </b>
            <p> <%= comment.body %></p>
          </div>
        </div>
            <% if can? :manage, comment %>
          <div class="flex justify-between items-start gap-3 border border-gray-300 px-3 py-1 text-gray-400 rounded">
          <button>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:text-black">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
              </svg>
            </button>
            <button>
              <%= link_to  edit_post_comment_path(@post, comment), class:"" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:text-black">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                </svg>
              <% end %>
            </button>
            <%= button_to  post_comment_path(@post, comment), method: :delete, data:{confirm:"Are you sure?"}, class:" " do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:text-black">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
            <% end %>
          </div>
      <% end %>
      </div>
      <div class="mx-8  my-3">
        <div class=" pl-2 border-l-4 border-green-500">
          <% comment.replies.each do |reply| %>
            <div class=" flex justify-between items-center my-2">
              <div class="flex gap-3 items-center">
                <%= image_tag reply.user.avatar, class:"object-cover h-10 w-10 rounded-full" %>
                <div>

                <b class="capitalize"><%= reply.user.username %></b>
                <p class="italic">
                  <%= reply.body %>
                </p>
                </div>

              </div>
              <% if can? :edit, reply %>
                <div class="space-x-2">
                  <button><%= link_to "Edit", "/posts/#{@post.id}/comments/#{comment.id}/replies/#{reply.id}/edit", class:"text-slate-500 hover:underline underline-slate-500" %>
                      </button>
                  <button><%= button_to "Delete", "/posts/#{@post.id}/comments/#{comment.id}/replies/#{reply.id}", method: :delete,data:{turbo_method:"delete",confirm:"Are you sure?"}, class:" text-red-500 hover:underline underline-red-500" %>
                      </button>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <% if user_signed_in? %>
          <%= form_for comment.replies.new, url:post_comment_replies_path(@post, comment) do |form| %>
            <div role="alert" class=" my-3">
              <div class="flex justify-between items-center gap-3 ">
                <%= form.text_area :body,  class:"block mx-4 p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 focus:ring-green-500 focus:border-green-500 ", placeholder:"Your message..." %>
                <%= form.button nil, class:"inline-flex justify-center p-2 text-green-600 rounded-full cursor-pointer hover:bg-green-100 " do %>
                  <svg class="w-8 h-8 rotate-90 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
                    <path d="m17.914 18.594-8-18a1 1 0 0 0-1.828 0l-8 18a1 1 0 0 0 1.157 1.376L8 18.281V9a1 1 0 0 1 2 0v9.281l6.758 1.689a1 1 0 0 0 1.156-1.376Z"/>
                  </svg>
                  <span class="sr-only">Send message</span>
                <% end %>
              </div>
            </div>
          <% end %>
          <% end %>
        <br/>
      </div>
    </div>

    <% end %>
    <div class="text-center mt-10 mb-20">

      <%= form_for @comments.new, url: post_comments_path(@post), controller: 'comment', action:"create" do |form| %>
        <div role="alert" class=" ">
          <div class="">
            <%= form.hidden_field :parent_id, value: params[:parent_id] %>
            <div class="w-full mb-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
              <div class="px-4 py-2 bg-white rounded-t-lg dark:bg-gray-800">
                <label for="comment" class="sr-only">Your comment</label>
                <%= form.text_area :body,class:"w-full px-0 text-sm text-gray-900 bg-white border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400", placeholder:"Write a comment..."  %>
              </div>
              <div class="flex items-center justify-between px-3 py-2 border-t dark:border-gray-600">
                <%= form.button nil, class:"inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-green-500 rounded-lg focus:ring-4 focus:ring-green-200 hover:bg-green-700" do %>
                  Post comment
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

</div>