<div class="bg-[#fff] mt-5 p-3 text-left capitalize">
  <h2 class="text-5xl text-[#001524]  font-semibold ">
    <%= @post.title%>
  </h2>
  <p class="text-sm text-[#445D48] mt-2">
    <%= @post.content %>
  </p>
  <p class="text-gray-600">By:
    <%= @post.user.username %></p>
</div>

<div class="flex justify-between items-center">
<% if can? :edit, @post %>
<%= link_to "Edit post",  edit_post_path(@post) , class:"underline" %>
<% end %>

  <% if can? :destroy, @post %>
    <%= button_to "delete post", post_path(@post), method: :delete, data:{confirm:'are you sure?'} , class:"underline"%>
  <% end %>
</div>

<div class="my-10">
<% @comments.each do |comment| %>
    <p class="bg-[#eee] text-black p-3 ">
      <b>
      <%= comment.user.username %>: </b>
      <%= comment.body %>
    </p>
    <div class="flex justify-between items-center ">
      <% if can? :edit, comment %>
            <%= link_to "Edit comments", edit_post_comment_path(@post, comment), class:"underline" %>
      <% end %>

      <% if can? :destroy, comment %>
      <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, data:{confirm:"Are you sure?"}, class:"underline text-red-400"%>
      <% end %>
    </div>

    <div class="m-8 my-3">
      <div class="mb-3 border border-2 p-3">
        <% comment.replies.each do |reply| %>
          <div class="flex justify-between items-center ">
            <div>
              <b><%= reply.user.username %>:</b>
              <i>
                <%= reply.body %> <br/>
              </i>
            </div>
            <% if can? :edit, reply %>
              <div class="space-x-3">
                  <button><%= link_to "Edit", "/posts/#{@post.id}/comments/#{comment.id}/replies/#{reply.id}/edit" %></button>
                <button><%= button_to "Delete", "/posts/#{@post.id}/comments/#{comment.id}/replies/#{reply.id}", method: :delete,data:{turbo_method:"delete",confirm:"Are you sure?"} %></button>
              </div>
            <% end %>

          </div>

        <% end %>
      </div>

        <%= link_to "add reply", "/posts/#{@post.id}/comments/#{comment.id}/new" , class:"bg-gray-200 px-2 py-px "%>
      <br/>
    </div>


<% end %>

<%= link_to "Add comment",  "/posts/#{@post.id}/comments/new" , class: 'text-center my-8  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 transition duration-150 ease-in-out hover:bg-green-500 bg-[#445D48] rounded text-white px-8 py-2 text-sm cursor-pointer block'%>
</div>