<div class="w-[800px] mx-auto">
<% if user_signed_in? %>
  <div class="my-5 border border-gray-200 rounded-lg flex items-center gap-3 bg-white p-5">
    <%= image_tag current_user.avatar, class: "h-14 w-14 object-cover rounded-full border border-gray-400 " %>
    <%= link_to "What's on your mind?.. #{current_user.username} ", new_post_path, class:"bg-gray-100 rounded-full w-full block hover:bg-gray-200 text-gray-500 px-5 py-3" %>
  </div>
  <% end %>

    <% if @posts.each do |post| %>
      <div class="bg-[#fff] mb-5 rounded-lg border">

          <div id="controls-carousel" class="relative w-full" data-carousel="static">
            <!-- Carousel wrapper -->
            <div class="relative h-[400px] overflow-hidden rounded-lg md:h-96">
              <!-- Item 1 -->
              <% post.post_images.each do |post_image| %>
                <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
                  <%= image_tag post_image, class:"absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"%>
                </div>
              <% end %>
            </div>
            <div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2">
              <% post.post_images.each do |post_image| %>
                <button type="button" class="w-6 h-1" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
            <% end %>
            </div>
            <!-- Slider controls -->
            <button type="button" class="absolute inset-y-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
            </button>
            <button type="button" class="absolute top-0 right-0 bottom-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
        </span>
            </button>
          </div>

        <%= link_to post_path(post) do %>

          <div class="p-5">
      <div class="flex justify-between items-center gap-3 my-3">
    <div class="flex items-center gap-3">
      <%= image_tag post.user.avatar , class:"w-12 h-12 rounded-full object-cover" %>
      <div>
        <h3 class="capitalize font-semibold"><%= post.user.username %></h3>
        <p class="text-gray-500 text-sm"> <%=  time_ago(post.created_at) %> </p>
      </div>
    </div>
    <i class="text-gray-500"><%= read_time(post.content)%></i>
  </div>
      <div>
    <h2 class="text-2xl text-[#001524] font-bold capitalize my-2 "><%= post.title%></h2>
    <p class="text-md "><%= post.content.split(' ')[0,2].join(' ') %> ... <span class="text-blue-700">show more</span></p>
  </div>
    <% end %>

  <div class=" flex justify-between items-center mt-5 mb-3" >
    <div class="flex  gap-2">
      <div class="flex -space-x-3 ">
        <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" viewBox="0 0 24 24" stroke-width="1.5" stroke="none" class="w-10 h-10 bg-blue-700 border border-4 border-white  p-1 rounded-full">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.5c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75A2.25 2.25 0 0116.5 4.5c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904M14.25 9h2.25M5.904 18.75c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 01-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 10.203 4.167 9.75 5 9.75h1.053c.472 0 .745.556.5.96a8.958 8.958 0 00-1.302 4.665c0 1.194.232 2.333.654 3.375z" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" fill="#FCE96A" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 bg-yellow-200 border border-4 border-white  p-1 rounded-full">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
        </svg>

        <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" viewBox="0 0 24 24" stroke-width="1.5" stroke="none" class="w-10 h-10 bg-[#FF0000] p-0.5  border border-4 border-white rounded-full">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>

      </div>
      <div class="pt-2 relative">
        <p id="<%= post.id %>" class="like-count inline-block cursor-pointer " ><%= post.likes.count %> loves</p>
        <div>
          <ul id="" class="hidden like-popup p-3 absolute flex flex-col items-start bg-white shadow w-[200px]">

          </ul>

        </div>
      </div>
    </div>
    <div class="flex justify-between items-center gap-8">
      <div>
        <%= post.comments.count %> Comments
      </div>
      <div>
        <button>55 shares</button>
      </div>
    </div>

  </div>

  <div class="flex justify-between items-center font-bold gap-5 border-t">
    <div class="flex flex-col items-center">
    <% if current_user %>
      <% user_like = post.likes.find{ |like| like.user_id == current_user.id} %>
      <% if user_like %>
        <button  id="<%= post.id %>" data-initial-state="true"  data-like-id="<%= user_like.id %>"  class="post-class ">
          <svg xmlns="http://www.w3.org/2000/svg" fill="red" viewBox="0 0 24 24" stroke-width="1.5" stroke="red" class=" w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
          </svg>
        </button>
      <% else %>
        <button id="<%= post.id %>"  class="post-class ">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=" w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
          </svg>
        </button>
      <% end %>
    <% else %>
      <button id="<%= post.id %>"  class="post-class ">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=" w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
      </button>
    <% end %>
      <p class="text-gray-500">love</p>
    </div>
    <div class="flex justify-between gap-16 items-center">
        <div class="block flex flex-col items-center my-3 text-gray-500">
          <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 01-.923 1.785A5.969 5.969 0 006 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337z" />
            </svg>
          </span>
          <p>Comment</p>
        </div>
      <div class="flex flex-col items-center text-gray-500">
        <svg class="w-6 h-6 rotate-45" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
          <path d="m17.914 18.594-8-18a1 1 0 0 0-1.828 0l-8 18a1 1 0 0 0 1.157 1.376L8 18.281V9a1 1 0 0 1 2 0v9.281l6.758 1.689a1 1 0 0 0 1.156-1.376Z"/>
        </svg>
        <p>Share</p>

      </div>
    </div>
  </div>
</div>
      </div>
<% end.empty? %>
  <h3>No Content found!!!</h3>
<% end %>
</div>