
<% @posts.each do |post| %>
<div class="bg-[#fff] mb-5 rounded-lg border">
  <%= link_to post_path(post) do %>

  <%= image_tag post.post_image, class:'h-[400px] w-full object-cover rounded-t-lg' %>

<div class="p-3">
  <div class="flex justify-between items-center gap-3 my-3">
    <div class="flex items-center gap-3">
      <%= image_tag post.user.avatar , class:"w-12 h-12 rounded-full object-cover" %>
      <div>
        <h3 class="capitalize font-semibold"><%= post.user.username %></h3>
        <p class="text-gray-500 text-sm"> <%=  time_ago(post.created_at) %> </p>
      </div>
    </div>
    <div>read time</div>
  </div>
  <div>
    <h2 class="text-3xl text-[#001524] font-bold capitalize my-2 "><%= post.title%></h2>
  </div>
  <% end %>

  <div class="flex items-center gap-5">

      <p id="like" class="like-count" ><%= post.likes.count %></p>
      <% user_like = post.likes.find{ |like| like.user_id == current_user.id} %>
      <% if user_like %>
      <button  id="<%= post.id %>"  data-like-id="<%= user_like.id %>"  class="post-class text-red-500">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
      </button>
      <% else %>
      <button id="<%= post.id %>"  class="post-class text-gray-500">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
      </button>
      <%#= button_to post_like_path(post, id:like_id.id), id:"like-btn-#{post.id}-#{like_id.id}", class:"post-class text-red-500" do  %>

      <%# end %>

      <% end %>

      <div class="block flex items-center gap-2 my-3">
        <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 01-.923 1.785A5.969 5.969 0 006 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337z" />
          </svg>
        </span>
        <%= post.comments.count %> Comments
      </div>
    </div>
</div>
</div>
<% end %>