<!-- app/views/questions/index.html.erb -->

<h1>All Questions</h1>

<%= link_to 'Ask a Question', new_question_path, class: 'btn btn-primary' %>

<% @questions.each do |question| %>
  <div class="question p-4 bg-gray-100 my-4">
    <h2 class="font-bold"><%= link_to question.title, question_path(question) %></h2>
    <p><%= truncate(question.content, length: 100) %></p>
    <p><%= question.likes.count %> | <%= question.answers.count %></p>
  </div>
  <hr>
<% end %>
