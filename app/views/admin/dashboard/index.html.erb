
<section class="text-gray-600 body-font flex gap-20 ">

  <div class="mt-10 text-violet-500 font-semibold flex-1">
    <%= link_to 'Dashboard', '/admin', class: "bg-violet-100 rounded-lg p-3 mb-4 block" %>
    <%= link_to 'Manage Users', '/admin/users', class: "p-3 rounded-lg  mb-4 block" %>
  </div>

  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Admin Dashboard</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Platform Statistics</p>
    </div>
    <div class="flex flex-wrap -m-4 text-center">
      <!-- Total Users -->
      <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
        <div class="border-2 border-gray-200 px-4 py-6 rounded-lg flex flex-col justify-center items-center">
          <img src="data:image/png;base64," alt="sdf">
          <h2 class="title-font font-medium text-3xl text-gray-900"><%= @total_users %></h2>
          <p class="leading-relaxed">Total Users</p>
        </div>
      </div>

      <!-- Total Posts -->
      <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
        <div class="border-2 border-gray-200 px-4 py-6 rounded-lg flex flex-col justify-center items-center">
          <img width="50" height="50" src="https://img.icons8.com/ios/50/e-learning.png" alt="e-learning"/>
          <h2 class="title-font font-medium text-3xl text-gray-900"><%= @total_posts %></h2>
          <p class="leading-relaxed">Total Posts</p>
        </div>
      </div>

      <!-- Total Comments -->
      <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
        <div class="border-2 border-gray-200 px-4 py-6 rounded-lg flex flex-col justify-center items-center">
          <img src="data:image/png;base64,">
          <h2 class="title-font font-medium text-3xl text-gray-900"><%= @total_comments %></h2>
          <p class="leading-relaxed">Total Comments</p>
        </div>
      </div>

      <!-- Total Videos -->
      <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
        <div class="border-2 border-gray-200 px-4 py-6 rounded-lg flex flex-col justify-center items-center">
          <img src="data:image/png;base64,">
          <h2 class="title-font font-medium text-3xl text-gray-900"><%= @total_videos %></h2>
          <p class="leading-relaxed">Total Videos</p>
        </div>
      </div>
      <!-- Total Videos -->
      <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
        <div class="border-2 border-gray-200 px-4 py-6 rounded-lg flex flex-col justify-center items-center">
          <img src="data:image/png;base64,">          <h2 class="title-font font-medium text-3xl text-gray-900"><%= @average_posts_per_user.round %></h2>
          <p class="leading-relaxed">Average Posts per User</p>
        </div>
      </div>

    </div>
  </div>
</section>
