Messages
<div class="bg-[#ddd]">
  <div class="flex gap-5 h-screen">
    <div class="w-1/3 flex flex-col ">
      <% @users.each do |user| %>
        <%= link_to "/users/#{user.id}" ,class: "#{user.id=== @user.id ? 'bg-green-200' : 'bg-gray-100'} p-2 flex gap-2 hover:bg-gray-50 rounded " do %>
          <%= image_tag user.avatar, class: "rounded-full h-10 w-10 " %>
            <div class="flex flex-col">
              <p class="font-bold"> <%= user.username %></p>
            </div>
          <% end %>
      <% end %>
    </div>
    <div class="w-2/3 ">
    <%= render 'show', locals={messages: @messages, user:@user} %>
    </div>
  </div>
</div>

