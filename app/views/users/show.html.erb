<div class="">
  <div class="flex mb-5 shadow-lg">
    <div class="w-1/3 flex  h-[80vh] bg-white flex-col  overflow-y-scroll">
      <div class="sticky top-0 p-2 bg-white border-b z-10">
        <p>Users</p>
      </div>
      <% @users.each do |user| %>
        <%= link_to "/users/#{user.id}" ,class: "#{user.id=== @user.id ? 'bg-[#007D2A] text-white hover:text-black' : 'bg-[#fff]'} p-3 transition ease-in-out p-2 flex gap-2 hover:bg-green-100 rounded " do %>
          <div class="relative">
            <%= image_tag user.avatar, class:"w-10 h-10 rounded-full object-cover" %>
            <span id="<%= user.id %>" class="active_user bottom-0 left-7 absolute  w-3.5 h-3.5  <%= user.online ? 'bg-green-500 border-2 border-white' : '' %>  rounded-full"></span>
          </div>
            <div class="flex flex-col">
              <p class="font-bold capitalize"> <%= user.username %></p>
            </div>
          <% end %>
      <% end %>
    </div>
    <div class="w-2/3">
    <%= render 'show', locals={messages: @messages, user:@user} %>
    </div>
  </div>
</div>

