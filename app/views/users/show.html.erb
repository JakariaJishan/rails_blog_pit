Messages
<div class="">
  <div class="flex gap-5 h-[80vh] bg-white ">
    <div class="w-1/3 flex flex-col p-3 overflow-y-scroll">
      <% @users.each do |user| %>
        <%= link_to "/users/#{user.id}" ,class: "#{user.id=== @user.id ? 'bg-green-200' : 'bg-[#fff]'} transition delay-100 p-2 flex gap-2 hover:bg-green-100 rounded " do %>
          <%= image_tag user.avatar, class: "rounded-full h-10 w-10 object-cover" %>
            <div class="flex flex-col">
              <p class="font-bold"> <%= user.username %></p>
            </div>
          <% end %>
      <% end %>
    </div>
    <div class="w-2/3 overflow-y-scroll relative">
    <%= render 'show', locals={messages: @messages, user:@user} %>
    </div>
  </div>
</div>

