
<div class="bg-grey-lighter flex flex-col">
  <div class="container max-w-xl mx-auto  flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 my-8 rounded shadow-md text-black w-full">
      <h2 class="mb-8 text-3xl text-center">Change my password</h2>
      <div class="text-left">
        <%= form_for(@user, url: users_password_change_path, html: { method: :patch }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :current_password, "Current password" %><br />
            <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password",placeholder:"current password", class:"block border border-gray-300 w-full p-3 rounded mb-4" %>
          </div>

          <div class="field">
            <%= f.label :password, "New password" %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",placeholder:"new password", class:"block border border-gray-300 w-full p-3 rounded mb-4" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", placeholder:"Re enter password", class:"block border border-gray-300 w-full p-3 rounded mb-4"
            %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password" , class:"w-full text-center py-3 rounded bg-green-500 text-white hover:bg-green-700 focus:outline-none my-3"
            %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>