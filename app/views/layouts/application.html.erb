<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/datepicker.min.js"></script>

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-[#F8F6F4]  ">

  <!--  navigation-->
  <div class=" flex justify-between items-center w-4/5 mx-auto mb-5 py-3 sticky top-0 bg-[#F8F6F4] z-[100]">
    <div>
      <%= link_to root_path do %>
      <%= image_tag ('x.png') , class:'w-16 h-16' %>
        <% end %>
    </div>

<!--    search function -->
        <div class=" w-1/3">
          <div class=" relative ">
            <%= form_tag(root_path, method: :get) do %>
              <div class="absolute top-5 left-0 flex items-center pl-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
              </div>
              <%= text_field_tag :title, params[:title], id:"search-input", class:"block w-full text-gray-900 hover:shadow-lg rounded-full border-0 focus:ring-blue-500 focus:border-blue-500 focus:ring-2  bg-white" %>
                <%#= submit_tag 'Search' , class:"absolute right-0 top-0 bg-gray-400 cursor-pointer rounded-lg px-1 text-white"%>
              <% end %>
              <div class="absolute top-10 left-0 bg-white w-full rounded-l shadow-lg">
                <ul id="search-results">
                </ul>
              </div>
          </div>

        </div>

    <div  class="flex justify-center items-center gap-5 relative" >
      <li class="list-none hover:underline"><a href="#">Services</a></li>
      <li class="list-none hover:underline"><a href="#">About</a></li>
      <li class="list-none hover:underline"><a href="#">Contact Us</a></li>
      <% if user_signed_in? %>
      <div id="open" >
          <%= image_tag current_user.avatar,class:"object-cover cursor-pointer rounded-full h-12 w-12  p-1 ring-2 ring-green-500" %>
      </div>

      <div id="popup" class="hidden absolute top-16 right-0 bg-[#fff] flex  flex-col justify-center items-center w-[280px] p-3 text-center  animate-fade-in shadow-lg z-20 rounded-md" >
        <%= image_tag current_user.avatar, class:"h-52 w-52 object-cover rounded-full" %>

        <div class="text-black mt-5">
          <ul>
            <li class="font-semibold text-xl"> <%= current_user.username %> </li>
            <li class="my-px"><%= current_user.email %> </li>
          </ul>

          <hr class="my-3"/>
<!--          edit user-->
          <%= link_to "Edit User", edit_user_registration_path, class:" block px-5 py-2 border border-gray-300 hover:text-white hover:bg-gray-500  rounded-md" %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"block my-3 px-5 py-2 border border-red-500 hover:text-white hover:bg-red-700 text-red-500 rounded-md" %>
        </div>

      </div>
      <% else %>
        <div>
          <%= link_to 'Sign In', user_session_path, class:" px-5 py-3 hover:bg-slate-200 hover:text-green-500 bg-gray-300 rounded-md" %>
          <%= link_to 'Create Account', new_user_registration_path, class:" px-5 py-3 border border-green-500 text-green-500 hover:text-white hover:bg-green-700  rounded-md" %>
        </div>
      <% end %>
    </div>

  </div>

  <div class="text-center flex justify-center transition ease-in-out" id="toast">
    <% flash.each do |name, msg| %>
      <% if name=='notice' %>
        <div id="toast-success" class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
          <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
            </svg>
            <span class="sr-only">Check icon</span>
          </div>
          <div class="ml-3 text-center text-sm font-normal"><%= msg %></div>
          <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-success" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
          </button>
        </div>
        <% else %>
        <div id="toast-danger" class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
          <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg dark:bg-red-800 dark:text-red-200">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z"/>
            </svg>
            <span class="sr-only">Error icon</span>
          </div>
          <div class="ml-3 text-sm font-normal"><%= msg %></div>
          <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-danger" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
          </button>
        </div>
        <% end %>
    <% end %>

  </div>

  <div class="max-w-[800px] mx-auto">
    <%= yield %>
    </div>
  </body>
</html>
